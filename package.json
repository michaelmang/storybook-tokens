{
  "name": "storybook-tokens",
  "version": "1.0.0",
  "description": "An addon for extracting Style Dictionary-friendly design tokens from a story.",
  "keywords": [
    "storybook-addons",
    "style-dictionary",
    "design-tokens"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelmang/storybook-tokens"
  },
  "author": "michaelmang",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/ts/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "*.js",
    "*.d.ts"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "buildBabel": "concurrently \"yarn buildBabel:cjs\" \"yarn buildBabel:esm\"",
    "buildBabel:cjs": "babel ./src -d ./dist/cjs --extensions \".js,.jsx,.ts,.tsx\"",
    "buildBabel:esm": "babel ./src -d ./dist/esm --env-name esm --extensions \".js,.jsx,.ts,.tsx\"",
    "buildTsc": "tsc --declaration --emitDeclarationOnly --outDir ./dist/ts",
    "prebuild": "yarn clean",
    "build": "concurrently \"yarn buildBabel\" \"yarn buildTsc\"",
    "build:watch": "concurrently \"yarn buildBabel:esm -- --watch\" \"yarn buildTsc -- --watch\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "start-storybook -p 6006",
    "start": "concurrently \"yarn build:watch\" \"yarn storybook -- --no-manager-cache --quiet\"",
    "build-storybook": "build-storybook",
    "prerelease": "zx scripts/prepublish-checks.mjs",
    "release": "yarn build && auto shipit",
    "eject-ts": "zx scripts/eject-typescript.mjs"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@babel/preset-typescript": "^7.13.0",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.3.6",
    "auto": "^10.32.2",
    "babel-loader": "^8.1.0",
    "boxen": "^5.0.1",
    "concurrently": "^6.2.0",
    "dedent": "^0.7.0",
    "postcss": "^8.3.11",
    "prettier": "^2.3.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4",
    "zx": "^1.14.1"
  },
  "peerDependencies": {
    "@storybook/addons": "^6.3.6",
    "@storybook/api": "^6.3.6",
    "@storybook/components": "^6.3.6",
    "@storybook/core-events": "^6.3.6",
    "@storybook/theming": "^6.3.6",
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "storybook": {
    "displayName": "Design Tokens",
    "author": "michaelmang",
    "description": "Extract Style Dictionary-friendly design tokens from a story",
    "repository": {
      "type": "git",
      "url": "https://github.com/michaelmang/storybook-tokens"
    },
    "supportedFrameworks": [
      "react"
    ],
    "icon": "https://res.cloudinary.com/dpzpn0xkz/image/upload/v1637017186/stpjgu22njaarsxvffbc.png"
  },
  "dependencies": {
    "component-css-extractor": "^1.0.0",
    "css": "^3.0.0"
  }
}
